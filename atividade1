#include <stdio.h>

int main() {
    float a, b, c;

    printf("Digite os tres lados do triangulo: ");
    scanf("%f %f %f", &a, &b, &c);

    // Verifica se é um triângulo válido
    if ((a + b > c) && (a + c > b) && (b + c > a)) {
        printf("Triangulo valido.\n");

        if (a == b && b == c) {
            printf("Tipo: Equilatero\n");
        } else if (a == b || a == c || b == c) {
            printf("Tipo: Isosceles\n");
        } else {
            printf("Tipo: Escaleno\n");
        }

    } else {
        printf("Nao e um triangulo valido.\n");
    }

// 1,1,1 equilatero, 1,2,2 isoceles, 3,4,5 escaleno e 1,2,3 nao e um triangulo

    return 0;

}
